@model AuditModel

@{
    ViewData["Title"] = "Audit";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    <p>Choose a date range for the currency conversion audit log</p>

@using (Html.BeginForm("Audit", "Home", FormMethod.Post))
        {
            @Html.TextBoxFor(m => m.ConversionDate)

            <br />

            <span asp-validation-for="ConversionDate" class="text-danger" ></span>

             <br />

             <p> @ViewBag.Conversion </p>
               
             <button class="submit-btn" type="submit" value="Search"> Search </button>
        }

        <br />

        <div style="width:100%;height:100%;text-align:center; vertical-align:middle;">
             <table class="table-bordered">
                 <thead>
                     <tr>
                         <th>ConversionID</th>
                         <th>GBPValue </th>
                         <th>CurrencyConvertedTo</th>
        </tr>
    </thead>
    <tbody>
        @if (@ViewBag.audit != null)
        {


            @foreach (var item in @ViewBag.audit)
            {

                <tr>
                    <td>@item.ConversionId</td>
                    <td>@item.GBPValue</td>
                    <td>@item.CurrencyConvertedTo</td>

                </tr>

            }

        }
    </tbody>
</table>
 </div>

</div>